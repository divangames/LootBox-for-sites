.snowflake {
    position: absolute;
    top: -50px; /* Начальная позиция */
    font-size: 1.5rem; /* Размер снежинок */
    color: #fff;
    pointer-events: none; /* Чтобы клики проходили насквозь */
    animation: fall linear infinite;
}

@keyframes fall {
    0% {
        transform: translateY(0);
        opacity: 1;
    }
    100% {
        transform: translateY(100vh);
        opacity: 0.5;
    }
}
